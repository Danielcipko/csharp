<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Guessing Game" Height="450" Width="800" Background="Pink" BorderBrush="Purple" BorderThickness="5">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFE58383" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="Info" HorizontalAlignment="Left" Margin="41,22,0,0" TextWrapping="Wrap" Text="Hot/Cold (1-100)" VerticalAlignment="Top" Height="24" Width="198" Foreground="Black" FontFamily="Arial Black" FontSize="20"/>
        <Label Content="Uhádni tajné číslo 1-100.&#xD;&#xA;" HorizontalAlignment="Left" Margin="35,51,0,0" VerticalAlignment="Top" Height="29" Width="204" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="41,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Name="Zadanie"/>
        <Button Content="VYSKUSAJ" HorizontalAlignment="Left" Margin="184,96,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" Height="30" FontFamily="Arial black"/>
        <Button Content="RESET" HorizontalAlignment="Left" Margin="41,354,0,0" VerticalAlignment="Top" Height="25" Width="89" Click="Button_Click_reset"  FontFamily="Arial black"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="359,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Name="Cheat" Height="79" RenderTransformOrigin="0.5,0.5" Width="209">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</Window>
