<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.67">
                <GradientStop Color="Black" Offset="0.5"/>
                <GradientStop Color="#FF6D0F89" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="615,195,0,0" VerticalAlignment="Top" Height="36" Width="116" Foreground="White" RenderTransformOrigin="0.665,0.48" FontFamily="Arial Black" Click="Stop_Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE32525" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name="Start" Content="Start" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center" Height="36" Width="113" Click="Start_Button_Click" Foreground="#FFFFEFEF" BorderBrush="#FF090909" FontFamily="Arial Black">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF60E576" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Check" Content="Check" HorizontalAlignment="Left" Margin="344,0,0,0" VerticalAlignment="Center" Height="37" Width="124" Foreground="White" FontFamily="Arial Black" Click="Check_Button_Click_2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF13D4B8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Name="ResultLabel" Content="ResultLabel" HorizontalAlignment="Left" Margin="309,341,0,0" VerticalAlignment="Top" Height="41" Width="191" RenderTransformOrigin="0.5,0.5" Foreground="White" FontFamily="Arial Black">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFBB18B2" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.041"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox Name="TipBox" HorizontalAlignment="Left" Margin="326,70,0,0" TextWrapping="Wrap" Text="TipBox" VerticalAlignment="Top" Width="160" Height="47" Foreground="White" TextChanged="TipBox_TextChanged" FontFamily="Arial Black">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC08080" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>
